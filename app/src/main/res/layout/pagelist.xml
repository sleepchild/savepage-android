<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/pagelistRoot"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		android:id="@+id/pagelist_listcont"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center_vertical"
			android:background="#00A0A0"
			android:paddingLeft="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Saved Pages"
				android:textSize="19sp"
				android:textColor="#FFFFFF"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"
			android:layout_height="1dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="40dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="All"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:paddingRight="15dp"
				android:paddingLeft="15dp"
				android:tag="All"
				android:textColor="@color/tab_inactive"
				android:id="@+id/categitem_tab_title"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:onClick="onChoseCategory"/>

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#00A0A0"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:id="@+id/pagelist_categitem_container">

				</LinearLayout>

			</HorizontalScrollView>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#00A0A0"/>

		<ListView
			android:id="@+id/pagelist_list5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</RelativeLayout>


